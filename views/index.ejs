<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link rel="stylesheet" href="css/index.css">
</head>
<style>
    @import url('https://fonts.googleapis.com/css2?family=Shrikhand&display=swap');
</style>
<style>
    @import url('https://fonts.googleapis.com/css2?family=Staatliches&display=swap');
</style>

<body>

    <div class="container">
        <%- include('partials/navbar') %>
            <div class="row">
                <div class="col-lg-2 col-md-12"></div>
                <div class="col-lg-8 col-md-12 upload">
                    <%- include('partials/messages.ejs') %>
                        <div class="card mb-3 p-4 crd" style="width: 100%; height: 100%;">
                            <div class="row g-0">
                                <div class="col-md-6 col-sm-12">
                                    <div class="card-body crd-body">
                                        <h2 class="card-title" style="font-family: 'BEYNO';"><span
                                                style="color: rgb(255, 0, 140);">UPLO</span>ADER</h2>
                                        <form action="/uploads" method="POST" novalidate enctype="multipart/form-data">
                                            <p class="card-text" style="font-family:'Staatliches">Upload your file here
                                            </p>
                                            <input name="file" class="form-control input" type="file"
                                                id="formFileMultiple">
                                            <br>
                                            <p class="card-text" style="font-family:'Staatliches'">Enter UniqueId of
                                                Reciever
                                            </p>
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" id="basic-addon1">@</span>
                                                </div>

                                                <input name="uniqueid" type="text" class="form-control input"
                                                    placeholder="Enter Uniqueid" aria-label="Username"
                                                    aria-describedby="basic-addon1">

                                            </div>
                                            <br>

                                            <button type="submit" class="btn butn shadow-lg">Add File</button>
                                        </form>
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-12 imgcontainer">
                                    <img src="images/crusde.png" style="width:100%; height:100%" alt="...">
                                </div>
                            </div>
                        </div>
                </div>
                <div class="col-md-2 col-sm-12"></div>
            </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>

</html>